<div class="header-container">
  <img id="hamburger-image" src="assets/img/burger.png" alt="Burger image.">

  <header>Eat-Da-Burger!</header>
</div>
<div class = "container">

<div class="main-container">
  <section id ="new-burger">
    <form class="create-update-form" action="/" method="POST">

      <div class="form-group">
        <textarea id="new-burger-text" rows="4" name="burger_name"></textarea>
      </div>

      <button type="submit" id="new-burger-submit">Submit</button>
    </form>

  </section>
  <div class = "row">
    <div class = "col-md-8">
  <section id="available-hamburgers">
    <ul id="burger-list">
      {{#each burgers}}
        {{#unless this.devoured}}
          <li class="available-burger">
      <div class = "row">
      <div class = "col-md-5">
            <span class="burgers">
              {{this.burger_name}}
            </span>
            </div>
            <div class = "col-md-7">
            <span id="devour-button">
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button class="devour-button" type="submit">Devour it!</button>
              </form>
            </span>
            </div>
            </div>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </section>
  </div>
  <div class = "col-md-4">
  <section id="devoured-hamburgers">
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li class="devour-burger">
            {{this.burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </section>
  </div>
  </div>
  
</div>
</div>